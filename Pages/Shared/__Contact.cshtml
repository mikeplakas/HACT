@model HACT.Pages.ContactModel

<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <!-- Section Title -->
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h1 class="mb-0">If You Have Any Question, Feel Free To Contact Us</h1>
        </div>

        <!-- Contact Info -->
        <!-- Contact Info -->
        <div class="row g-4 mb-5 justify-content-center text-center">
            <div class="col-md-5 col-lg-4">
                <div class="p-4 shadow-sm bg-white rounded h-100 d-flex flex-column align-items-center justify-content-center">
                    <div class="bg-primary d-flex align-items-center justify-content-center rounded mb-3" style="width: 60px; height: 60px;">
                        <i class="fa fa-phone-alt text-white"></i>
                    </div>
                    <h5 class="mb-1">Call Us</h5>
                    <h6 class="text-primary mb-0">+30 2104111428</h6>
                </div>
            </div>
            <div class="col-md-5 col-lg-4">
                <div class="p-4 shadow-sm bg-white rounded h-100 d-flex flex-column align-items-center justify-content-center">
                    <div class="bg-primary d-flex align-items-center justify-content-center rounded mb-3" style="width: 60px; height: 60px;">
                        <i class="fa fa-envelope-open text-white"></i>
                    </div>
                    <h5 class="mb-1">Email Us</h5>
                    <h6 class="text-primary mb-0">info@hact.info</h6>
                </div>
            </div>
        </div>



        <!-- Contact Form -->
        <div class="row g-5">
            <div class="col-lg-8 mx-auto">
                <div class="p-4 bg-white shadow-sm rounded">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input asp-for="Message.Name" class="form-control border-0 bg-light px-4" placeholder="Your Name" style="height: 55px;" />
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Message.Email" type="email" class="form-control border-0 bg-light px-4" placeholder="Your Email" style="height: 55px;" />
                            </div>
                            <div class="col-12">
                                <input asp-for="Message.Subject" class="form-control border-0 bg-light px-4" placeholder="Subject" style="height: 55px;" />
                            </div>
                            <div class="col-12">
                                <textarea asp-for="Message.Message" class="form-control border-0 bg-light px-4 py-3" rows="4" placeholder="Message"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>


                    @if (Model?.Success == true)
                    {
                        <div class="alert alert-success mt-3 mb-0 text-center">✅ Message submitted successfully!</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
