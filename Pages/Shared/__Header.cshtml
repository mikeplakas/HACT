@{
    var currentCshtmlName = ViewData["CshtmlName"]?.ToString() ?? string.Empty;
    var pageTitle = currentCshtmlName != "" ? currentCshtmlName.ToTitle() : "";
    var pageSubtitle = ViewData["PageSubtitle"]?.ToString() ?? "";
}

<div class="container-fluid bg-primary py-5 bg-header" >
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <h1 class="display-4 text-white animated zoomIn">@pageTitle</h1>
            @if (!string.IsNullOrEmpty(pageSubtitle))
            {
                <p class="text-white fs-5 mt-3">@pageSubtitle</p>
            }
        </div>
    </div>
</div>
