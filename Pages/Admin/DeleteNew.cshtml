@page "{id:int}"
@model HACT.Pages.Admin.DeleteNewModel
@{
    ViewData["Title"] = "Delete New";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["CshtmlName"] = "DeleteNew";
}

<section class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded p-4 border-danger">
                <h2 class="text-center text-danger mb-4">🗑 Delete New</h2>

                <div class="alert alert-warning text-center">
                    <p class="mb-1">Are you sure you want to delete the following New?</p>
                    <h5 class="fw-bold">@Model.New.Title</h5>
                </div>

                <form method="post" class="text-end">
                    <input type="hidden" asp-for="New.Id" />
                    <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                    <a asp-page="/News" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</section>
