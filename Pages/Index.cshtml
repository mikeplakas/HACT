@page
@model HACT.Pages.IndexModel

@{
    ViewData["Title"] = "Home page";
}

@await Html.PartialAsync("__Quote")

<!-- Πρόσφατα Άρθρα -->
<section class="container mt-5">
    <div class="text-center mb-4">
        <h5 class="fw-bold text-primary text-uppercase">Latest Articles</h5>
    </div>

    <div class="row g-4">
        @foreach (var article in Model.LatestArticles)
        {
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="blog-item rounded overflow-hidden d-flex flex-column w-100 shadow-sm custom-card">
                    <div class="blog-img position-relative overflow-hidden" style="height: 200px;">
                        <img class="img-fluid w-100 h-100 object-fit-cover" src="@article.ImageUrl" alt="@article.Title">
                    </div>
                    <div class="p-4 d-flex flex-column justify-content-between flex-grow-1">
                        <div>
                            <div class="d-flex mb-3">
                                <small><i class="far fa-calendar-alt text-primary me-2"></i>@article.DatePosted.ToString("dd MMM, yyyy")</small>
                            </div>
                            <h5 class="mb-2 text-truncate">@article.Title</h5>
                            <p style="min-height: 80px;">
                                @(article.Content.Length > 100 ? article.Content.Substring(0, 100) + "..." : article.Content)
                            </p>
                        </div>
                        <div class="mt-auto pt-2">
                            <a class="btn btn-sm btn-outline-primary me-2" asp-page="/NewsDetail" asp-route-id="@article.Id">
                                🔍 Read More
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Κουμπί See All -->
@*     <div class="text-center mt-4">
        <a class="btn btn-primary" asp-page="/News" asp-route-category="Articles">See All Articles</a>
    </div> *@
</section>


